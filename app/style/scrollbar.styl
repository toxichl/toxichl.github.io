::-webkit-scrollbar-track
{
  border-radius: 10px;
  background-color: #F5F5F5;
}

::-webkit-scrollbar
{
  width: 8px;
  height: 8px;
  background-color: #F5F5F5;
}

::-webkit-scrollbar-thumb
{
  border-radius: 8px;
  background-color: #ccc;
  transition: all 0.5s;
}

::-webkit-scrollbar-thumb:hover
{
  border-radius: 8px;
  background-color: #777;
}