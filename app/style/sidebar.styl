#v2js-offcanvas {
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 700px;
    z-index: 99999;
    overflow-y: auto;
    opacity: 0;
    display: none;
}

@media screen and (max-width: 768px) {
    #v2js-offcanvas {
        padding-top: 30px;
        width: 270px;
    }
}

#v2js-offcanvas .v2js-close-offcanvas {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 30px;
    width: 30px;
    overflow: hidden;
    color: #cccccc;
    -webkit-transition: 0.3s;
    -o-transition: 0.3s;
    transition: 0.3s;
}

@media screen and (max-width: 768px) {
    #v2js-offcanvas .v2js-close-offcanvas {
        top: 5px;
    }
}

#v2js-offcanvas .v2js-close-offcanvas:hover {
    width: 85px;
    color: #000;
}

#v2js-offcanvas .v2js-close-offcanvas > span {
    width: 100px;
    display: -moz-inline-stack;
    display: inline-block;
    zoom: 1;
    *display: inline;
}

#v2js-offcanvas .v2js-close-offcanvas > span > span {
    top: 7px;
    position: relative;
    font-size: 18px;
    vertical-align: top;
}

#v2js-offcanvas .v2js-box {
    float: left;
    margin-bottom: 30px;
    width: 100%;
}

#v2js-offcanvas .v2js-menu,
#v2js-offcanvas .v2js-bio {
    width: 50%;
    padding: 50px;
}

@media screen and (max-width: 768px) {
    #v2js-offcanvas .v2js-menu,
    #v2js-offcanvas .v2js-bio {
        width: 100%;
        padding: 30px;
    }
}

#v2js-offcanvas .v2js-bio {
    text-align: center;
    float: left;
}

#v2js-offcanvas .v2js-bio figure {
    text-align: center;
    display: block;
    margin-bottom: 30px;
}

#v2js-offcanvas .v2js-bio img {
    width: 180px;
    margin: 0 auto;

    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -ms-border-radius: 50%;
    border-radius: 50%;
}

#v2js-offcanvas .v2js-bio p {
    font-size: 16px;
}

#v2js-offcanvas .heading {
    font-size: 16px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: #cccccc;
    margin-bottom: 30px;
}

#v2js-offcanvas .v2js-menu {
    float: right;
}

#v2js-offcanvas .v2js-menu ul {
    padding: 0;
    margin: 0;
}

#v2js-offcanvas .v2js-menu ul li {
    padding: 0;
    margin: 0 0 10px 0;
    list-style: none;
    display: block;
}

#v2js-offcanvas .v2js-menu ul li a {
    color: #000;
}