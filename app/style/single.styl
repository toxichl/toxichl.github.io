.v2js-post-entry.single-entry .v2js-article-title {
  font-size: 80px;
}

@media screen and (max-width: 992px) {
  .v2js-post-entry.single-entry .v2js-article-title {
    font-size: 56px;
  }
}

@media screen and (max-width: 768px) {
  .v2js-post-entry.single-entry .v2js-article-title {
    font-size: 34px;
  }
}

.v2js-post-entry article {
  text-align: center;
  float: left;
  margin-bottom: 110px;
  padding-left: 15px;
  padding-right: 15px;
}

@media screen and (max-width: 1200px) {
  .v2js-post-entry article {
    margin-bottom: 80px;

  }
}

@media screen and (max-width: 992px) {
  .v2js-post-entry article {
    margin-bottom: 80px;
  }
}

@media screen and (max-width: 768px) {
  .v2js-post-entry article {
    margin-bottom: 40px;
  }
}

.v2js-post-entry article a img {
  opacity: 1;
  -webkit-transition: 0.5s;
  -o-transition: 0.5s;
  transition: 0.5s;
}

.v2js-post-entry article a:hover img {
  opacity: .4;
}

.v2js-post-entry article figure {
  margin-bottom: 30px;
}

.v2js-post-entry article h2 {
  font-family: "Playfair Display", times, serif;
  font-size: 34px;
  color: #000;
  margin-bottom: 30px;
}

.v2js-post-entry article h2 a {
  color: #000;
}

@media screen and (max-width: 992px) {
  .v2js-post-entry article h2 {
    font-size: 26px;
  }
}

@media screen and (max-width: 768px) {
  .v2js-post-entry article h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }
}

.v2js-post-entry article .v2js-meta {
  font-size: 16px;
  font-family: "Roboto", arial, sans-serif;
  color: #999999;
  margin-bottom: 20px;
  display: block;
}

@media screen and (max-width: 480px) {
  .v2js-post-entry article .v2js-meta {
    margin-bottom: 10px;
  }
}

.v2js-post-entry article .v2js-meta.v2js-date {
  text-transform: uppercase;
  letter-spacing: 2px;
}

.v2js-post-entry article .content-article {
  padding-top: 4em;
}

.v2js-post-entry article .content-article a {
  text-decoration: underline;
}

.v2js-post-entry article .content-article blockquote {
  border-left: none;
  padding-left: 0;
}

.v2js-post-entry article .content-article blockquote p {
  font-family: "Playfair Display", times, serif;
  font-size: 27px;
  font-style: italic;
  line-height: 1.5;
}

.v2js-post-entry article .content-article blockquote p cite {
  padding-top: 20px;
  display: block;
  font-size: 16px;
  font-style: normal;
  color: gray;
}

.v2js-post-entry article .v2js-highlight {
  border: 4px solid #f2f2f2;
  padding: 30px;
  width: 100%;
  margin-bottom: 30px;
}

.v2js-post-entry article .v2js-highlight.right {
  float: right;
  margin-left: 30px;
}

.v2js-post-entry article .v2js-highlight.left {
  float: left;
}

.v2js-post-entry article .v2js-highlight h4 {
  font-size: 14px;
  letter-spacing: 2px;
  color: #b3b3b3;
  text-transform: uppercase;
  font-family: "Roboto", arial, sans-serif;
}

.v2js-post-entry article .v2js-highlight p {
  font-family: "Playfair Display", times, serif;
  color: #000;
  font-size: 20px;
}

.v2js-post-prev,
.v2js-post-next {
  position: fixed;
  z-index: 999;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  color: #000;
  text-transform: uppercase;
  font-weight: bold;
  -webkit-transition: 0.5s;
  -o-transition: 0.5s;
  transition: 0.5s;
}

@media screen and (max-width: 768px) {
  .v2js-post-prev,
  .v2js-post-next {
    position: relative;
    text-align: center;
    display: -moz-inline-stack;
    display: inline-block;
    zoom: 1;
*display: inline;
}
}

.v2js-post-prev span,
.v2js-post-next span {
  vertical-align: baseline;
  width: 100px;
}

.v2js-post-prev span i,
.v2js-post-next span i {
  top: 7px;
  position: relative;
  font-size: 30px;
  color: #000;
}

.v2js-post-prev {
  left: 0;
  margin-left: -25px;
}

.v2js-post-prev:hover {
  margin-left: 10px;
  color: #000;
}

@media screen and (max-width: 768px) {
  .v2js-post-prev {
    margin-left: 15px;
    float: left;
  }
}

.v2js-post-next {
  right: 0;
  margin-right: -25px;
}

.v2js-post-next:hover {
  margin-right: 10px;
  color: #000;
}

@media screen and (max-width: 768px) {
  .v2js-post-next {
    margin-right: 15px;
    float: right;
  }
}

.v2js-social {
  padding: 0;
  margin: 30px 0 0 0;
  position: relative;
}

.v2js-social li {
  padding: 0;
  margin: 0;
  list-style: none;
  display: inline;
}

.v2js-social li a {
  font-size: 20px;
  padding: 4px;
  color: #666;
}

figure figcaption {
  padding-top: 15px;
  font-size: 14px;
  color: #999999;
}