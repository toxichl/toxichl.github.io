@import "mixin.styl"
@import "color.styl"
@import "header.styl"
@import "scrollbar.styl"
@import "sidebar.styl"

.v2js-title {
  position: relative;
  height: 60px;
  padding: 10px 0;
  background: #2a2a2a;
  color: #aaa;
  font-family: "Microsoft YaHei UI Light";
  text-align: right;
  font-size: 14px;
  font-weight: 100;
}

.v2js-btn-full {
  $btn-base()
  background-color: #3f4347;
  border: 0;
  color: #c8c9ca;
  margin 0 5px;
}


.v2js-btn-empty {
  $btn-base()
  background-color: transparent;
  border: 1px solid #787878;
  color: #c8c9ca;
  margin 0 5px;
}